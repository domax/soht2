{
  "name": "soht2-ui",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "scripts": {
    "dev": "vite --mode dev",
    "build": "tsc -b && vite build && npm run deploy",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|vue)\"",
    "clean": "npx del -f dist/ && npm run clean4deploy",
    "clean4deploy": "npx del -f ../soht2-server/src/main/resources/public/* ../soht2-server/src/main/resources/templates/index.html",
    "deploy": "npm run clean4deploy && npx copyfiles -u 1 dist/* dist/**/* ../soht2-server/src/main/resources/public/ && npx move-file ../soht2-server/src/main/resources/public/index.html ../soht2-server/src/main/resources/templates/index.html"
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mui/icons-material": "^6.1.2",
    "@mui/material": "^6.1.2",
    "@mui/x-data-grid": "^8.10.2",
    "@mui/x-date-pickers": "^8.10.2",
    "dayjs": "^1.11.13",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^5.0.4",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "move-file-cli": "^3.0.0",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^7.1.12"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "semi": true,
    "trailingComma": "es5",
    "objectWrap": "collapse",
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  }
}
